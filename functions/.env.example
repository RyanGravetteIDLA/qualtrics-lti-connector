# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Qualtrics API Configuration
QUALTRICS_API_TOKEN=your-qualtrics-api-token
QUALTRICS_BASE_URL=https://iad1.qualtrics.com
QUALTRICS_BRAND_ID=your-brand-id
QUALTRICS_LIBRARY_ID=your-library-id

# Agilix Buzz API Configuration
AGILIX_DOMAIN=your-agilix-domain
AGILIX_USERNAME=your-agilix-username
AGILIX_PASSWORD=your-agilix-password
AGILIX_BASE_URL=https://api.agilix.com

# LTI Configuration
LTI_ISSUER=https://your-domain.com
LTI_KEY_ID=your-lti-key-id
LTI_PRIVATE_KEY_PATH=./keys/private.key
LTI_PUBLIC_KEY_PATH=./keys/public.key

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
SESSION_TIMEOUT_HOURS=1
MAX_GRADE_DEFAULT=100

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Optional: Webhook Configuration
QUALTRICS_WEBHOOK_SECRET=your-webhook-secret
AGILIX_WEBHOOK_SECRET=your-webhook-secret

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id